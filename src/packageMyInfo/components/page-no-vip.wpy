<template>
  <div class="page-no-vip">
    <!-- logo -->
    <div class="page-logo">
      <image class="img" src="https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip-logo.png" mode="widthFix"></image>
    </div>
    <!-- vip-card -->
    <div class="vip-card">
      <swiper @change="on_changeVIP" previous-margin="85rpx" next-margin="85rpx" style="height: 340rpx;" autoplay="{{false}}" indicator-dots="{{ false }}">
        <block wx:for="{{listRows}}" wx:key="*this">
          <swiper-item>
            <image class="img-swiper" src="{{ item.cardImage }}" mode="widthFix"></image>
          </swiper-item>
        </block>
      </swiper>
    </div>
    <!-- 会员权益 -->
    <div class="rights">
      <div class="rights-item" v-for="(item,index) in listRows[vipIndex].itemList" :key="index">
        <image class="img" src="{{ item.itemGiftIcon }}" ></image>
        <div class="title">{{ item.itemGiftTitle }}</div>
        <div class="explain-text">{{ item.itemGiftDesc }}</div>
      </div>
    </div>

    <div class="my-btn" @tap="on_getMembership">¥{{ listRows[vipIndex].cardPrice }} 立即开通</div>
    <!-- 协议 -->
    <div class="checkbox-group" @tap="onChange">
      <van-checkbox icon-size="30rpx" checked-color="#C9AB79" value="{{ checkedProtocol }}"></van-checkbox>
      <div class="t1">我已阅读并同意</div>
      <div class="t2">《会员卡购买协议》</div>
      <div class="t2">《用户指南》</div>
    </div>
    <!-- 购/卡/说明 -->
    <div class="explain-box">
      <div class="title">购/卡/说/明</div>
      <div class="p">1、请使用您本人实名办理的手机号码注册并购买各项增值服务；</div>
      <div class="p">2、会员卡有效期内租赁商品，享受会员专享免费及折扣价；</div>
      <div class="p">3、商品租期可在7天-14天-30天内选择；</div>
      <div class="p">4、丰厚的会员权益，平台专属服务“享”不停；</div>
      <div class="p">5、会员卡无减免押金权限，用户仍需缴纳租赁押金，具体押金以订单页显示为准；</div>
      <div class="p">6、会员卡购买成功或兑换成功即激活,不支持退款。</div>
    </div>

    <!-- 弹框 推荐码 -->
    <van-dialog use-slot title="推荐码" show="{{ showDialog }}" show-cancel-button cancelButtonText="跳过" confirm-button-color="#C9AB79" @cancel="payVip" @confirm="payVip">
      <input class="referral-code" v-model="referralCode" placeholder="输入推荐人推荐码" type="text" />
    </van-dialog>

  </div>
</template>

<script>
import wepy from '@wepy/core'
import { payVip, listVip, getUserInfo } from './../../http/api.js'
wepy.component({
  props: {
  },
  data: {
    showDialog: false, //  推荐码显示
    referralCode: '', // 推荐码
    vipIndex: 0,
    checkedProtocol: false,  // 协议
    //
    listRows: [],
    rights: [
      {
        title: '0元体验',
        explain: '打牌包包0元租',
        imageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip1.png',
        actioveImageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip1.png'
      },
      {
        title: '专项折扣',
        explain: '数款包包折扣租',
        imageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip2.png',
        actioveImageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip2-act.png'
      },
      {
        title: '专享包包',
        explain: '数款包包优先租',
        imageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip3.png',
        actioveImageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip3-act.png'
      },
      {
        title: '5次延长',
        explain: '会员最高延长150天',
        imageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip4.png',
        actioveImageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip4-act.png'
      },
      {
        title: '6次包邮',
        explain: '往返包邮',
        imageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip5.png',
        actioveImageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip5-act.png'
      },
      {
        title: '3次免费鉴定',
        explain: '鉴定您的自有包包',
        imageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip6.png',
        actioveImageSrc: 'https://rent-luxury.oss-cn-shanghai.aliyuncs.com/miniapp/dev/images/vip6-act.png'
      }
    ]
  },
  methods: {
    // 选vip类型
    on_changeVIP (e) {
      this.vipIndex = e.$wx.detail.current
      console.log(e.$wx.detail.current)
    },
    // 刷新
    refresh () {
      this.$emit('refresh')
    },
    // 协议
    onChange () {
      this.checkedProtocol = !this.checkedProtocol
    },
    // 购买会员
    payVip () {
      let _this = this
      _this.referralCode = ''
      _this.showDialog = false
      let parameter = {
        cardId: _this.listRows[_this.vipIndex].cardId,
        spreaderCode: _this.referralCode
      }
      payVip(parameter).then(res => {
        if (res.code === 0) {
          _this.WXzifu(res.data)
          console.log(res)
        }
      })
    },
    // 开通会员
    on_getMembership () {
      let _this = this
      if (!_this.checkedProtocol) {
        wx.showModal({
          title: '提示',
          content: '请阅读并同意寄卖协议',
          success (res) {
            if (res.confirm) {
              console.log('用户点击确定')
            } else if (res.cancel) {
              console.log('用户点击取消')
            }
          }
        })
      } else {
        _this.payVip()
        // _this.showDialog = true
      }
    },
    // 微信支付
    WXzifu (data) {
      wx.requestPayment({
        timeStamp: data.tradeInfo.timeStamp,
        nonceStr: data.tradeInfo.nonceStr,
        package: data.tradeInfo.package,
        signType: data.tradeInfo.signType,
        paySign: data.tradeInfo.paySign,
        success (res) {
          if (res.errMsg === 'requestPayment:ok') {
            getUserInfo()
          }
          console.log(res)
        },
        fail (res) { }
      })
    },
    // 获取页面数据
    getDataInfo () {
      let _this = this
      listVip({ filter: 'sale' }).then(res => {
        if (res.code === 0) {
          _this.listRows = res.data.listRows
        }
      })
    }
  },
  // 在组件实例刚刚被创建时执行
  created () {
  },
  // 在组件实例进入页面节点树时执行
  attached () {
    // 获取页面数据
    this.getDataInfo()
  },
  // 组件生命周期函数-在组件布局完成后执行
  ready () {
  }
})
</script>
<config>
{
    usingComponents: {
      "van-checkbox": "~@vant/checkbox/index",
      "my-swiper": "~@components/mySwiper",
      "van-dialog": "~@vant/dialog/index"
    }
}
</config>
