<script>
import wepy from '@wepy/core'
import { applySpreader, getUserInfo } from './../../http/api.js'
wepy.component({
  props: {
    list: {
      type: [Object, Array],
      default: []
    }
  },
  data: {
    name: '',
    tel: '',
    checkedProtocol: false  // 协议
  },
  methods: {
    // 刷新
    refresh () {
      this.$emit('refresh')
    },
    // 协议
    onChange () {
      this.checkedProtocol = !this.checkedProtocol
    },
    // 开通会员
    on_submit () {
      let _this = this
      if (!_this.checkedProtocol) {
        wx.showModal({
          title: '提示',
          content: '请阅读并同意寄卖协议',
          success (res) {
            if (res.confirm) {
              console.log('用户点击确定')
            } else if (res.cancel) {
              console.log('用户点击取消')
            }
          }
        })
      } else {
        _this.showDialog = true
        console.log(_this.name, _this.tel)
        applySpreader({
          formMobile: _this.tel,
          formName: _this.name
        }).then(res => {
          wx.showModal({
            title: '提示',
            content: '申请已提交',
            success (res) {
            }
          })
          getUserInfo()
        })
      }
    }
  },
  attached () {
  }
})
</script>
