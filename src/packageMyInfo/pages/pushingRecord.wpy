<style lang="less">
.page-container {
  margin-top: -64px;
  .page-cord {
    position: absolute;
    top: 0;
    left: 0;
    background-image: url('https://app.static.luyishepin.vip/miniapp/dev/images/tggl-bg.png');
    background-size: 100%;
    width: 750rpx;
    height: 296rpx;
    color: rgba(255, 255, 255, 1);
    .title-key {
      margin-top: 150rpx;
      font-size: 26rpx;
      padding-left: 40rpx;
    }
    .title-val {
      padding-left: 40rpx;
      margin-top: 40rpx;
      font-size: 98rpx;
      font-weight: 500;
    }
    .bottom-box {
      background: rgba(255, 255, 255, 0.08);
      display: flex;
      position: absolute;
      width: 100%;
      left: 0;
      bottom: 0;
      .item {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 150rpx;
        flex: 1;
        line-height: 1;
        .val {
          font-size: 36rpx;
        }
        .key {
          margin-top: 20rpx;
          font-size: 24rpx;
        }
        .left-border {
          width: 1px;
          height: 92rpx;
          background: rgba(255, 255, 255, 1);
          opacity: 0.4;
        }
      }
      &:after {
        content: '';
        position: absolute;
