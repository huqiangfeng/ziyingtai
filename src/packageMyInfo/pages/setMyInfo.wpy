  .item-cell__bd {
    background: #fff;
    padding: 0rpx 40rpx;
    .item-content {
      position: relative;
      padding: 37rpx 0;
      padding-right: 15px;
      border-bottom: 1px solid #f6f6f6;
      display: flex;
      justify-content: space-between;
      align-items: center;
      .item-label {
        line-height: 1;
        font-size: 26rpx;
        color: rgba(49, 49, 59, 1);
      }
      .item-right {
        line-height: 50rpx;
        font-size: 26rpx;
        color: rgba(161, 161, 161, 1);
        .img-header {
          width: 126rpx;
          height: 126rpx;
          border-radius: 50%;
          display: block;
        }
        picker {
          width: 200rpx;
          line-height: 50rpx;
          min-height: 50rpx;
          text-align: right;
        }
      }
    }
  }
