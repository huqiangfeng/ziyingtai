      display: flex;
      flex-direction: column;
      align-items: center;
      line-height: 1;
      .img {
        width: 60rpx;
        height:60rpx;
        display: block;
      }
      .title {
        margin-top: 20rpx;
        font-size: 28rpx;
        color: rgba(0, 0, 0, 1);
      }
      .explain-text {
        margin-top: 10rpx;
        font-size: 22rpx;
        color: rgba(0, 0, 0, 1);
      }
    }
  }
  // btn
  .my-btn {
    width: 670rpx;
    margin: 0 auto;
  }
  // 协议
  .checkbox-group {
    padding: 40rpx;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    font-size: 28rpx;
    .t1 {
      margin-left: 10rpx;
      color: rgba(48, 49, 59, 1);
    }

    .t2 {
      color: #c9ab79;
    }
  }

  // 说明
  .explain-box {
    padding: 0 40rpx 40rpx;
    .title {
      text-align: center;
      font-size: 32rpx;
      color: rgba(0, 0, 0, 1);
