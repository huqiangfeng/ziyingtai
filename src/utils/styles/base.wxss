page {
  height: 100%;
  margin: 0;
  padding: 0;
  background: #fff;
}
.btn {
  width: 690rpx;
  height: 92rpx;
  margin: 0 auto 0;
  line-height: 92rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(0deg, #ff4839 0%, #ff8965 100%);
  border-radius: 46rpx;
}
view {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -o-box-sizing: border-box;
  -ms-box-sizing: border-box;
}
image {
  display: block;
  width: 100%;
  height: 100%;
}
.middle {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.middle_absolute {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}
.flex {
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  justify-content: center;
  align-items: center;
  flex-flow: row wrap;
}
.flex_item {
  text-align: center;
}
/* 让flex_item 里的文字垂直居中 */
.flex_item::before {
  display: inline-block;
  content: '';
  height: 100%;
  vertical-align: middle;
}
/* 表单输入: input_cell 为表单输入的单元格，把标签和输入框放一行 */
.input_cell {
  padding: 16px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border: 1px solid gray;
}
.box-size {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -o-box-sizing: border-box;
  -ms-box-sizing: border-box;
}
.border-radius {
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
}
.tc {
  text-align: center;
}
.tl {
  text-align: left;
}
.tr {
  text-align: right;
}
.margin {
  margin: auto;
}
